<% content_for :styles do %>
    <%= stylesheet_link_tag 'authform', media: 'all', 'data-turbolinks-track': 'reload' %>
<% end %>

<%= render "devise/shared/error_messages", resource: resource %>

<section class="section">
    <div class="form-wrap">
        <div class="tabs">
            <h3 class="signup-tab"><a class="active" href="/users/sign_up">Sign Up</a></h3>
            <h3 class="login-tab"><a href="/users/sign_in">Login</a></h3>
        </div><!--.tabs-->

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="tabs-content">
            <div id="signup-tab-content" class="active">
                <form class="signup-form" action="" method="post">

                    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', :class => 'input' %>

                    <div class="field">
                        <% if @minimum_password_length %>
                            <em>(<%= @minimum_password_length %> characters minimum)</em>
                        <% end %><br />
                        <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password', :class => 'input' %>
                        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirm Password', :class => 'input' %>
                    </div>

                    <%= f.submit "Sign Up", :class => 'button is-primary' %>

                </form><!--.login-form-->
                <div class="help-text">
                    <p>By signing up, you agree to our</p>
                    <p><a href="/terms">Terms of service</a></p>
                </div><!--.help-text-->
            </div><!--.signup-tab-content-->
        </div>

        <% end %>

    </div>
</section>
